<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <br />
    <form method="POST" action="/auth/loginUser">
        <div class="container">
            <% if(error) { %> 
                <div class="mx-auto mb-3 alert alert-danger w-50">
                  <span class="text-center">  <%= error %></span>
                </div>
            <% } %> 
            <div class="card mx-auto w-50 shadow rounded text-left">
                <div class="card-header h4 font-weight-normal font-italic text-center  text-info">
                    Login
                </div>
                <div class="card-body mt-2">
                    <div class=" form-group">
                        <label htmlFor="email">Email :- </label>
                        <input type="email" class="form-control shadow-sm" name="email" required
                            placeholder="Enter Email" />
                    </div>
                    <div class=" form-group">
                        <label htmlFor="password">Password :- </label>
                        <input type="password" class="form-control shadow-sm " name="password" required
                            placeholder="Enter Password" />
                    </div><br/>
                    <div class="mx-auto">
                        <button type="submit" class=" btn btn-outline-primary shadow-sm mb-3">
                            Login
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>

</html>