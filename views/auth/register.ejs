<!DOCTYPE html>
<html lang="en">

<%- include('../includes/head.ejs') %>
<link rel="stylesheet" type="text/css" href="/css/form.css">
</head>

<body style="background-image: linear-gradient(to right, #2193b0, #6dd5ed);">
    <%- include('../includes/navigation.ejs') %>
    <br />
    <form method="POST" action="/auth/registerUser">
        <div class="container">
            <div class="card mx-auto w-75 shadow rounded text-left">
                <div class="card-header h4 font-weight-normal font-italic text-center  text-info">
                    Register
                </div>
                <div class="card-body mt-2">
                    <div class="row">
                        <div class="col-sm">
                            <div class=" form-group">
                                <label htmlFor="firstname">Firstname :- </label>
                                <input type="text" class="form-control shadow-sm" name="first_name" required
                                    placeholder="Enter Firstname" />
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class=" form-group">
                                <label htmlFor="lastname">Lastname :- </label>
                                <input type="text" class="form-control shadow-sm " name="last_name" required
                                    placeholder="Enter Lastname" />
                            </div>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="col-sm">
                            <div class="form-group">
                                <label htmlFor="password">Password :- </label>
                                <input type="password" class="form-control shadow-sm" name="password" required />
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="form-group">
                                <label htmlFor="email">Email :- </label>
                                <input type="email" class="form-control shadow-sm" name="email" required
                                    placeholder="Enter Email" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mx-auto ">
                    <button type="submit" class=" btn btn-outline-primary shadow-sm mb-3">
                        Register
                    </button>
                </div>
            </div>
        </div>
    </form>
</body>

</html>